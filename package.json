{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "license": "ISC",
  "author": "Georgiana Stanciu",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile:sass": "sass src/scss:src/dist/css --no-source-map --style=compressed",
    "watch:sass": "sass --watch src/scss:src/dist/css --no-source-map",
    "serve": "live-server --open=.",
    "build": "npm run compile:sass",
    "dev": "npm run compile:sass && live-server ./src",
    "lint:js": "eslint .",
    "lint:css": "stylelint 'src/scss/**/*.{css,scss}'",
    "lint:css:fix": "stylelint 'src/scss/**/*.{css,scss}' --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "eslint . --fix && stylelint '**/*.{css,scss}' --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "sass": "^1.77.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1"
  }
}
